.taskBody {
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
  position: absolute;
  justify-content: inherit;
  display: flex;
  flex-direction: column;
}

.tabs-swiper {
  height: 350rpx;
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.task-body {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  min-height: 100rpx;
  background-color: #fff;
}

.task-date {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  border-bottom: 1px solid #e6e6e6;
}

.task-list {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.task-list view {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
}
.task-voicebtn-complete{
  width: 400rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border:1px solid #17c6ee;
  background-color: #ffffff;
  color: #17c6ee;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.task-btn {
  width: 400rpx;
  margin-left: 30rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #17c6ee;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.task-voiceList{
  flex: 1;
}
.task-btnBody {
  width: 100%;
  
  box-sizing: border-box;
  height: 120rpx;
  display: flex;
  padding:30rpx;
  background-color:#ffffff;
  align-items: center;
  justify-items: center;

}
.task-btn-complete {
  background-color: #1abc9c!important;
  flex:1;
  margin-left:0px;
}

/* 语音框 */
.task-voiceList{
  padding: 30rpx;
  width: 100%;
  height: 600rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.task-voiceList .task-voiceItem{
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  position: relative;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.task-voice-head{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 15rpx;
  left: 20rpx;
}
.task-voice-name{
  position: absolute;
  top: 15rpx;
  font-size: 26rpx;
  font-weight: bold;
  left: 140rpx;
}
.task-voice-date{
  position: absolute;
  top: 65rpx;
  font-size: 26rpx;
  left: 140rpx;
}
.task-voice-time{
  width: 170rpx;
  height: 70rpx;
  border:1rpx solid #FFB680 ;
  background-color: #fffbee;
  color: #FFB680;
  border-radius: 15rpx;
  right:  140rpx;
  top: 25rpx;
  position: absolute;
  padding-left: 15rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}
.task-voice-timeComplete{
  right:  30rpx;
  width: 250rpx;
}

.task-voice-del{
  position: absolute;
  right: 0;
  top: 0;
  background-color: red;
  color: #ffffff;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  line-height: 120rpx;
  text-align: center;
  width: 120rpx;
  height: 100%;

}